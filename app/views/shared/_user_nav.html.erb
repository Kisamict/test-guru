<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <%= link_to 'Test Guru', root_path, class: "navbar-brand" %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if current_user.is_a?(Admin) %>
      <ul class="navbar-nav">
        <li class="nav-item">
          <%= link_to t('admin.nav.admin_panel'), admin_tests_path, class: "nav-link" %>
        </li>
      </ul>
    <% end %>
    <div class="nav-item ml-auto">
      <% if user_signed_in?  %>
        <span class="navbar-text">
          <%= t('hello') %>, <%= current_user.first_name %> Guru! |
          <%= link_to t('buttons.logout'), destroy_user_session_path, method: :delete, data: { confirm: 'Are you sure?' } %>
        </span>
        <%= render 'shared/feedback' %>
      <% else %>
        <span class="navbar-text">
          <%= link_to t('buttons.login'), new_user_session_path %> |
          <%= link_to t('buttons.sign_up'), new_user_registration_path %>
        </span>
      <% end %>
    </div>
  </div>
</nav>
