  <button type="button" class="badge badge-primary mx-2" data-toggle="modal" data-target="#feedbackModal">
    <%= t("buttons.feedback") %>
  </button>

  <div class="modal fade" id="feedbackModal" tabindex="-1" role="dialog" aria-labelledby="feedbackModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="feedbackModalLabel"><%= t('pages.feedback.header') %></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form_for :feedback, url: feedback_path do |f| %>
              <p>
                <%= t('pages.feedback.message') %>
                <%= f.text_area :body, rows: 7, class: "form-control" %>
              </p>
                <%= f.submit t("buttons.send"), class: "btn btn-success" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
