<div class="row justify-content-center">
  <div class="col-sm col-md-6 col-lg-4 mt-5">
  <%= render "devise/shared/error_messages", resource: resource %>
    <h2><%= t('devise.registrations.header') %></h2>
    <div class="card my-3">
      <div class="card-body">
        <div class="form-group">
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <p>
              <%= f.label :first_name %>
              <%= f.text_field :first_name, autofocus: true, class: "form-control" %>
            </p>

            <p>
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: "form-control" %>
            </p>

            <p>
              <%= f.label :email %>
              <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
            </p>

            <p>
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em><%= t('devise.registrations.minimum_password_length', length: @minimum_password_length) %></em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </p>

            <p>
              <%= f.label :password_confirmation %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </p>
          
            <%= f.submit t('devise.registrations.sign_up'), class: "btn btn-success" %>
          <% end %>
        </div>
      </div>
    </div>
    <%= render "devise/shared/links" %>
  </div>
</div>

