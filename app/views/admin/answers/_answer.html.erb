<tr>
  <td><%= answer.body %></td>
  <td><%= answer.correct? %></td>
  <td>
    <%= link_to t('buttons.show'), admin_answer_path(answer), class: "btn btn-success" %>
    <%= link_to t('buttons.edit'), edit_admin_answer_path(answer), class: "btn btn-warning" %>
    <%= link_to t(t('buttons.delete')), admin_answer_path(answer),
                          method: :delete, 
                          class: "btn btn-danger",
                          data: { confirm: 'Are you sure?' }%>
  </td>
</tr>
