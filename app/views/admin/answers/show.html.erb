<div class="row justify-content-center">
  <div class="col col-md-8">
    <div class="card my-5">
      <h1 class="card-header"><%= @answer.question.body %></h1>
      <div class="card-body">
        <p class="card-text">
          <p><b>Answer:</b> <%= @answer.body %></p>
          <p><b>Correct:</b> <%= @answer.correct %></p>
        </p>
        <%= link_to t("buttons.back"), admin_question_path(@answer.question), class: "btn btn-primary" %>
        <%= link_to t("buttons.edit"), edit_admin_answer_path(@answer), class: "btn btn-warning" %>
      </div>
    </div>
  </div>
</div>
