<div class="form-group">
    <%= form_for [:admin, @question, answer] do |f| %>
      <%= render 'shared/errors', resource: @answer %>
      
      <%= f.text_area :body, id: :answer_body, rows: 5, class: "form-control" %>

      <p class="mt-3">
        <%= f.label :correct %>
        <%= f.check_box :correct, id: :answer_correct%>
      </p>
      <%= link_to 'Back', admin_question_path(@answer.question), class: "btn btn-primary" %>
      <%= f.submit class: "btn btn-success" %> 
    <% end %>
</div>
