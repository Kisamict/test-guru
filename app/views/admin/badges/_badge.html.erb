 <div class="col-sm-12 col-md-6 col-lg-4 mt-2">
  <div class="card text-center">
    <h3 class="card-header"><%= badge.title %></h3>
    <p class="m-2">
      <%= link_to t("buttons.edit"), edit_admin_badge_path(badge), class: "btn btn-warning" %>
      <%= link_to t("buttons.delete"),
                  admin_badge_path(badge),
                  method: :delete,
                  data: { confirm: "Are you sure?" },
                  class: "btn btn-danger" %>
    </p>
    <div class="card-body">
      <%= image_tag badge.image_url, class: "w-100" %>
      <p class="mt-3"><%= t("pages.badges.index.#{badge.awarding_rule}") %></p>
    </div>
  </div>
</div>
