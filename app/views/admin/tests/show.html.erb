<div class="container-center">
  <h2><%= t('pages.tests.show.title', test: @test.title) %></h2>
  <table class='table-center'>
    <tr>
      <th>Id</th>
      <th>Body</th>
      <th>Actions</th>
    </tr>
    <% @test.questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.body %></td>
        <td>
          <span><%= link_to 'show', admin_question_path(question) %></span>
          <span><%= link_to 'edit', edit_admin_question_path(question) %></span>
          <span><%= link_to 'delete', admin_question_path(question), method: :delete,
                                                                     data: { confirm: "Are you sure?" } %>
          </span>
        </td>
      </tr>
    <% end %>
  </table>
  <%= link_to t('buttons.create_question'), new_admin_test_question_path(@test) %>
  <br><br>
  <%= link_to t('buttons.back'), admin_tests_path %>
</div>
